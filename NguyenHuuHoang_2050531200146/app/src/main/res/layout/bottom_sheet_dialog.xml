<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlbSheet"
    android:background="@color/blue_shade1">

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Course Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scroll_view"
    android:layout_below="@id/tvCourseName"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivCourse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tvCourseName"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCourseName"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@id/ivCourse"
                    android:padding="3dp"
                    android:text="Description"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSuitedFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescription"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@id/ivCourse"
                    android:padding="3dp"
                    android:text="Suited For"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSuitedFor"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@id/ivCourse"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:text="Price"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/scroll_view">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Chỉnh sửa"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/btnEditCourse"
/>

    </LinearLayout>

</RelativeLayout>